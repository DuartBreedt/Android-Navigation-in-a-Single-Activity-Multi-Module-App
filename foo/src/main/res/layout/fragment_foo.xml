<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foo"
            android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/go_somwhere_button"
            app:layout_constraintEnd_toEndOf="@+id/go_somwhere_button"
            app:layout_constraintStart_toStartOf="@+id/go_somwhere_button"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_somwhere_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to bar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>